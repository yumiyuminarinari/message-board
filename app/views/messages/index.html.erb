<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
    <p>
      <span class="label label-info"><%= message.name %></span>
      <%= simple_format(h(message.body)) %>
    </p>
    <% end %>
  </div>
</div>


<%= form_for @message, html: {class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <label class="col-sm-1 control-label">名前</label>
    <div class="col-sm-11">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label">内容</label>
    <div class="col-sm-11">
      <%= f.text_area :body , size: "50x3", class: "form-control" %>
    </div>
  </div>
  <br>
  <%= f.submit class:"btn btn-sm btn-primary" %>
<% end %>