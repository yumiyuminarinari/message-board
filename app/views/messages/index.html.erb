<h1>Messages#index</h1>
<p>Find me in app/views/messages/index.html.erb</p>

<h1>メッセージ一覧</h1>
<% @messages.each do |message| %>
  id:<%= message.id %>
  名前:<%= message.name %>
  内容:<%= message.body %>
  <br>
<% end %>

<%= form_for(@message) do |f| %>
  名前:
  <%= f.text_field :name %>

  内容:
  <%= f.text_field :body %>
  <%= f.submit %>
<% end %>